<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopAddFragment">
    <Button
        android:id="@+id/btn_sendout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#7EB9B2"
        android:fontFamily="@font/noto_sans"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="確認並送出"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_sendout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btn_sendout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/im_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:src="@drawable/ic_launcher_foreground" />

            <Button
                android:id="@+id/btn_upload_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="120dp"
                android:layout_marginVertical="5dp"
                android:backgroundTint="#7EB9B2"
                android:fontFamily="@font/noto_sans"
                android:text="選擇圖片"
                android:textSize="16sp"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_add_menu_header"
                android:fontFamily="@font/noto_sans"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="餐點名稱"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/et_add_meal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_add_menu_body"
                android:ems="10"
                android:fontFamily="@font/noto_sans"
                android:hint="輸入餐點名稱"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_add_menu_header"
                android:fontFamily="@font/noto_sans"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="餐點價格"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/et_add_meal_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_add_menu_body"
                android:ems="10"
                android:fontFamily="@font/noto_sans"
                android:hint="輸入餐點價格"
                android:inputType="number"
                android:minHeight="48dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_add_menu_header"
                android:fontFamily="@font/noto_sans"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="餐點資訊"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/et_add_meal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_add_menu_body"
                android:ems="10"
                android:fontFamily="@font/noto_sans"
                android:hint="輸入餐點資訊"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>